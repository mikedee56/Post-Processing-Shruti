# Example Environment Configuration
# Copy to .env and modify as needed

# Data Paths
ASR_DATA_PATH=data
ASR_CONFIG_PATH=config
ASR_LOGS_PATH=logs

# Processing Settings
ASR_BATCH_SIZE=10
ASR_MAX_CONCURRENT_FILES=3
ASR_MAX_FILE_SIZE_MB=50

# Storage Limits
ASR_MAX_TOTAL_SIZE_GB=100
ASR_MAX_FILES_PER_DIR=1000
ASR_LOG_RETENTION_DAYS=30

# Quality Settings
ASR_MIN_CONFIDENCE_SCORE=0.7
ASR_ENABLE_HUMAN_REVIEW_FLAG=true

# Development Settings
ASR_LOG_LEVEL=INFO
ASR_DEBUG_MODE=false
ASR_ENABLE_DETAILED_LOGGING=false

